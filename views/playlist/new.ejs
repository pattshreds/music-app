<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <%- include ('../partials/head.ejs') %>
    <title></title>
  </head>
  <body>
    <nav>
      <%- include ('../partials/nav.ejs') %>
    </nav>
    <h1>Create a new playlist</h1>
    <form class="create" action="/playlist" method="POST">
      <label for="playlistTitle">Title</label>
      <input type="text" name="playlistTitle" required />
      <label for="playlistDescription">Description</label>
      <input type="text" name="playlistDescription" required />
      <br><br>
      <input type="submit" value="Create">
    </form>
    <br><br>
<!-- Cloudinary upload widget -->

    <button id="upload_widget" class="cloudinary-button">Upload files</button>

      <script src="https://widget.cloudinary.com/v2.0/global/all.js" type="text/javascript">
      </script>

      <script type="text/javascript">
      let audioURL=""
      var myWidget = cloudinary.createUploadWidget({
      cloudName: 'sven2050',
      uploadPreset: 'music-app'}, (error, result) => {
        if (!error && result && result.event === "success") {
          console.log('Done! Here is the image info: ', result.info);
          document.getElementById("audioURL").setAttribute("value", result.info.url)
        }
      }
      )
      document.getElementById("upload_widget").addEventListener("click", function(){
        myWidget.open();
      }, false);
      </script>
  </body>
</html>
