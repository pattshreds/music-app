<!DOCTYPE html>
<html lang="en" dir="ltr">
    <head>
        <%- include ('../partials/head.ejs') %>
        <link rel="stylesheet" href="/css/navStyles.css" />
        <link rel="stylesheet" href="/css/landingStyles.css" />
        <link rel="stylesheet" href="/css/globalStyles.css" />
    </head>
    <body>
        <nav><%- include ('../partials/nav.ejs') %></nav>
        <div class="container">
            <div class="container-2">
                <img
                    src="/images/landing.gif"
                    id="landing-page-gif"
                    class="responsive-img z-depth-3"
                    alt="moodset-gif"
                />
            </div>
            <h1 class="new">Log In</h1>
            <div class="row">
                <form
                    action="/sessions"
                    class="col s12 center-align"
                    method="POST"
                >
                    <div class="input-field">
                        <input type="text" name="username" required />
                        <label for="name">User Name:</label>
                    </div>
                    <div class="input-field">
                        <input type="password" name="password" />
                        <label for="color">Password:</label>
                    </div>
                    <button
                        class="btn-flat waves-effect waves cyan-text text-lighten-2 center-align"
                        type="submit"
                        name="action"
                    >
                        Submit
                        <i class="material-icons right">send</i>
                    </button>
                </form>
            </div>
        </div>
    </body>
</html>
